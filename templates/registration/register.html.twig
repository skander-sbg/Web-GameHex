{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<section class="container my-3">
    <div class="row">
        <div class="col">

            <h1>Register</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.lastName) }}
                {{ form_row(registrationForm.CIN) }}
               
                {{ form_row(registrationForm.phone) }}
                {{ form_row(registrationForm.date) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {#{{ form_row(registrationForm.agreeTerms) }}#}

                <div style="align:center">
                    <button type="submit" class="btn btn-primary btn-lg my-10">Register</button>
                </div>
                <center>
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg my-10">Sign in</a>
                </center>
            {{ form_end(registrationForm) }}

        </div>
    </div>
</section>

{% endblock %}
