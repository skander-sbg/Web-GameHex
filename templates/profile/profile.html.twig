{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ user.CIN }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ user.phone }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ user.date }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            {#<tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>#}
            
        </tbody>
    </table>

    <center>
    <a href="{{ path('app_articles_index') }}">back to Articles</a>
    </center>

    <center>
    <button class="btn btn-lg btn-primary mt-5  " >
        <a href="{{ path('app_profile_edit', {'email': user.email}) }}" class="btn btn-primary btn-lg ">Edit</a>
    </button>
    </center>
    
{% endblock %}
