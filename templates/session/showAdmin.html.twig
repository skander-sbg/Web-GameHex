{% extends 'baseAdmin.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ session.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ session.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ session.description }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ session.date ? session.date|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>StartTime</th>
            <td>{{ session.startTime ? session.startTime|date('H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Link</th>
            <td>{{ session.link }}</td>
        </tr>
        <tr>
            <th>Rating</th>
            <td>{{ session.rating }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_indexAdmin') }}">back to list</a>
{% endblock %}
