{% extends 'baseAdmin.html.twig' %}

{% block title %}Info index{% endblock %}

{% block body %}
<h1>Info index</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Upload Date</th>
            <th>Local Video</th>
            <th>Youtube URL</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for info in infos %}
        <tr>
            <td>{{ info.contentid }}</td>
            <td>{{ info.contenttitle }}</td>
            <td>{{ info.contentdate ? info.contentdate|date('Y-m-d H:i:s') : '' }}</td>
            <td>{{ info.infocontent }}</td>
            <td>{{ info.ytContent }}</td>
            <td>
                <a href="{{ path('app_info_show', {'contentid': info.contentid}) }}">show</a>
                <a href="{{ path('app_info_edit', {'contentid': info.contentid}) }}">edit</a>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a class="btn btn-success ml-9" href="{{ path('app_info_new') }}">Create new</a>
{% endblock %}