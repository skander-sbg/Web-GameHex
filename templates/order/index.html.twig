{% extends 'baseAdmin.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
<h1>Order index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Ref</th>
            <th>User ID</th>
            <th>Total</th>
            <th>View Order Details</th>
        </tr>
    </thead>
    <tbody>
        {% for order in orders %}
        <tr>
            <td>{{ order.ref }}</td>
            <td>{{ order.user_id }}</td>
            <td>{{ order.total }}</td>
            <td> <a class="btn btn-success" href="{{ path('app_order_findByRef', {'ref': order.ref}) }}">show</a>
            </td>
            <!-- <td>
                <a href="{{ path('app_order_show', {'id': order.ref}) }}">show</a>
                <a href="{{ path('app_order_edit', {'id': order.ref}) }}">edit</a>
            </td> -->
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

{% endblock %}