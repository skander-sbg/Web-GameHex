{% extends 'baseAdmin.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<h1>Product</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Ref</th>
            <td>{{ product.ref }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Review</th>
            <td>{{ product.review }}</td>
        </tr>
        <tr>
            <th>State</th>
            <td>{{ product.state }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td> <img src="{{ asset('/users/5/'~ product.imgURL) }}"></img>
            </td>
        </tr>
    </tbody>
</table>

<a class="btn btn-dark" href="{{ path('app_product_index') }}">back to list</a>

<a class="btn btn-success" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

{{ include('product/_delete_form.html.twig') }}
{% endblock %}